@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ÜRÜN ID</th>
            <th>ÜRÜN ADI</th>
            <th>ÜRÜN KATEGORİ</th>
            <th>FİYAT</th>
            <th>MARKA</th>
            <th>STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.URUNID</td>
                <td>@product.URUNAD</td>
                <td>@product.TBLKATEGORILER.KATEGORIAD</td> <!--join işlemi yapılmış olur.-->
                <td>@product.FIYAT</td>
                <td>@product.MARKA</td>
                <td>@product.STOK</td>
                <td><a href="/Product/DeleteProduct/@product.URUNID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/BringProduct/@product.URUNID" class="btn btn-success">Güncelle</a></td>

            </tr>
        }
    </tbody>
</table>
<a href="/Product/NewProduct" class="btn btn-primary">Yeni Ürün Ekle</a>

<script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet"/>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />


<script>
  $('#tbl1').DataTable();
</script>